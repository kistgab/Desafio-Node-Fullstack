generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Place {
  id            String        @id @default(uuid())
  name          String        @unique
  nickname      String?
  type          PlaceType
  cpnj          String?
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
  contact_phone String
  contact_email String
  entries       Entry[]
  ticket_gates  TicketGate[]
  events        Event[]
  place_address PlaceAddress?

  @@index([name])
  @@map("places")
}

enum PlaceType {
  Stadium
  Teather
  Other
}

model PlaceAddress {
  id         String  @id @default(uuid())
  city       String
  state      String
  zip_code   String
  address    String
  complement String?
  place      Place   @relation(fields: [place_id], references: [id])
  place_id   String  @unique

  @@map("places_addresses")
}

model Entry {
  id       String  @id @default(uuid())
  name     String
  place    Place?  @relation(fields: [place_id], references: [id])
  place_id String?

  @@unique([name, place_id])
  @@map("entries")
}

model TicketGate {
  id       String  @id @default(uuid())
  name     String
  place    Place?  @relation(fields: [place_id], references: [id])
  place_id String?

  @@unique([name, place_id])
  @@map("ticket_gates")
}

model Event {
  id            String    @id @default(uuid())
  name          String
  place         Place     @relation(fields: [place_id], references: [id])
  place_id      String
  startDate     DateTime
  endDate       DateTime
  type          EventType
  contact_phone String?
  contact_email String
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  @@map("events")
}

enum EventType {
  Soccer
  Show
  Presentation
  Other
}
